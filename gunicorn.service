[unit]
Description = Demo fast api application
After=network.target

[Service]
User=gideon
Group=gideon
WorkingDirectory = /home/gideon/app/src/
Environment="PATH=/home/gideon/app/venv/bin/"
ExecStart=/home/gideon/app/venv/bin/gunicorn -w 1 -k uvicorn.workers.UvicornWorker app.main:app --bind 0.0.0.0:8000

[Install]
WantedBy=multi-user.target